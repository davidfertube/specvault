{
  "mcpServers": {
    "steel-knowledge": {
      "command": "python",
      "args": ["-m", "backend.mcp_server"],
      "env": {
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
        "PINECONE_API_KEY": "${PINECONE_API_KEY}",
        "PINECONE_INDEX_NAME": "steel-index"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem"],
      "env": {
        "ALLOWED_PATHS": "${PWD}"
      }
    }
  }
}
